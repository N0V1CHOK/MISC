{
  "manifest_version": 2,
  "name": "Aggressive Tab Manager",
  "version": "1.0",
  "description": "Keeps only the 3 most recently active tabs loaded, unloads the rest",
  "permissions": [
    "tabs",
    "activeTab",
    "storage"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "firefox-tab-manager@local",
      "strict_min_version": "109.0",
      "data_collection_permissions": "none"
    }
  }
}

